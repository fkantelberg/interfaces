<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_serializer_form" model="ir.ui.view">
        <field name="model">ir.serializer</field>
        <field name="inherit_id" ref="base_serializer.view_serializer_form" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="code" />
            </field>

            <page name="advanced" position="before">
                <page name="schema" string="Schema">
                    <div class="text-muted">
                        Use it to configure additional fields for the schema. It's
                        important if you use snippets otherwise it will happen
                        automatically based on the defined fields.
                    </div>
                    <field name="schema_ids" />
                </page>
            </page>
        </field>
    </record>
</odoo>
