<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_mqtt_event_tree" model="ir.ui.view">
        <field name="model">mqtt.event</field>
        <field name="arch" type="xml">
            <tree>
                <field name="active"/>
                <field name="topic"/>
                <field name="model_id"/>
                <field name="type_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="view_mqtt_event_form" model="ir.ui.view">
        <field name="model">mqtt.event</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="model" invisible="1"/>
                        <field name="topic"/>
                        <field name="active" widget="boolean_toggle"/>
                        <field name="qos"/>
                        <field name="retain"/>
                        <field name="model_id"/>
                        <field name="field_ids" widget="many2many_tags" attrs="{'invisible': [('model_id', '=', False)]}"/>
                        <field name="type_ids" widget="many2many_tags" attrs="{'invisible': [('model_id', '=', False)]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mqtt_event_search" model="ir.ui.view">
        <field name="model">mqtt.event</field>
        <field name="arch" type="xml">
            <search>
                <field name="topic" operator="ilike"/>
                <separator/>
                <filter name="qos0" string="At Most Once" domain="[('qos', '=', '0')]"/>
                <filter name="qos1" string="At Least Once" domain="[('qos', '=', '1')]"/>
                <filter name="qos2" string="Exactly Once" domain="[('qos', '=', '2')]"/>
            </search>
        </field>
    </record>

    <record id="action_mqtt_event" model="ir.actions.act_window">
        <field name="name">MQTT Event</field>
        <field name="res_model">mqtt.event</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'active_test': False}</field>
    </record>

    <menuitem id="mqtt_event_menu" name="Events" action="action_mqtt_event" parent="mqtt_main_menu"/>
</odoo>
